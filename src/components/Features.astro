---
const features = [
  {
    title: 'WYSIWYG Markdown Editor',
    description: 'Edit visually â€” what you see is what you get.',
    icon: 'edit',
    highlights: [
      'Slash commands for quick formatting',
      'Tables, task lists, images',
      'Mermaid diagrams render inline',
    ],
  },
  {
    title: 'Kanban Boards',
    description: 'Drag-and-drop task management that stays in plain text.',
    icon: 'kanban',
    highlights: [
      'Drag-and-drop task management',
      'Your files stay as plain markdown',
      'Auto-complete columns',
    ],
  },
  {
    title: 'File Viewers',
    description: 'View documents without leaving your editor.',
    icon: 'file',
    highlights: [
      'PDF with zoom and rotation',
      'Word documents',
      'Excel spreadsheets',
      'CSV/TSV tables',
    ],
  },
];

const icons = {
  edit: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />`,
  kanban: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 17V7m0 10a2 2 0 01-2 2H5a2 2 0 01-2-2V7a2 2 0 012-2h2a2 2 0 012 2m0 10a2 2 0 002 2h2a2 2 0 002-2M9 7a2 2 0 012-2h2a2 2 0 012 2m0 10V7m0 10a2 2 0 002 2h2a2 2 0 002-2V7a2 2 0 00-2-2h-2a2 2 0 00-2 2" />`,
  file: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21h10a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 3H7a2 2 0 00-2 2v14a2 2 0 002 2z" />`,
};
---

<section id="features" class="py-20 sm:py-28 bg-white">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Section header -->
    <div class="text-center mb-16">
      <h2 class="text-3xl sm:text-4xl font-bold text-charcoal mb-4">
        Everything you need to work visually
      </h2>
      <p class="text-lg text-gray-600 max-w-2xl mx-auto">
        Built for product managers who want Notion-like tools without leaving Cursor.
      </p>
    </div>

    <!-- Feature cards -->
    <div class="grid md:grid-cols-3 gap-8">
      {
        features.map((feature) => (
          <article class="relative p-8 rounded-2xl bg-gray-50 border border-gray-100 hover:border-primary/20 hover:shadow-lg transition-all duration-300">
            <!-- Icon -->
            <div class="w-12 h-12 rounded-xl bg-primary/10 flex items-center justify-center mb-6">
              <svg
                class="w-6 h-6 text-primary"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
                set:html={icons[feature.icon as keyof typeof icons]}
              />
            </div>

            <!-- Content -->
            <h3 class="text-xl font-semibold text-charcoal mb-3">
              {feature.title}
            </h3>
            <p class="text-gray-600 mb-6">
              {feature.description}
            </p>

            <!-- Highlights -->
            <ul class="space-y-2">
              {feature.highlights.map((highlight) => (
                <li class="flex items-start gap-2 text-sm text-gray-600">
                  <svg class="w-5 h-5 text-secondary shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                  </svg>
                  {highlight}
                </li>
              ))}
            </ul>
          </article>
        ))
      }
    </div>
  </div>
</section>
