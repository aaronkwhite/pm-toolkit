          <span class="font-medium" style="color: var(--text-primary);">Buy me a coffee</span>
        </a>
      </div>
    </div>
  </div>
</section>

<!-- Final CTA with gradient -->
<section id="install" class="relative overflow-hidden noise-overlay pt-24 sm:pt-32 lg:pt-40">
  <!-- Dramatic gradient background -->
  <div class="absolute inset-0">
    <!-- Base gradient -->
    <div class="absolute inset-0 bg-gradient-to-br from-[var(--color-primary)] via-[var(--color-secondary)] to-[#A855F7]"></div>

    <!-- Mesh overlay for depth -->
    <div class="absolute inset-0 opacity-50">
      <div class="absolute top-0 left-1/4 w-96 h-96 bg-white/10 rounded-full blur-[100px]"></div>
      <div class="absolute bottom-0 right-1/4 w-80 h-80 bg-black/10 rounded-full blur-[80px]"></div>
    </div>

    <!-- Dark overlay for text contrast -->
    <div class="absolute inset-0 bg-black/10"></div>
  </div>

  <div class="relative z-10 max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
    <div class="scroll-animate" data-animation="animate-fade-in-up">
      <!-- Headline -->
      <h2 class="text-4xl sm:text-5xl lg:text-6xl font-bold tracking-tight mb-6 text-white">
        Ready to write <span class="opacity-90">visually?</span>
      </h2>

      <!-- Subhead -->
      <p class="text-xl sm:text-2xl mb-12 text-white/80">
        Install in seconds. Free forever.
      </p>

      <!-- CTAs -->
      <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
        {
          marketplaceLinks.map((link) => (
            <a
              href={link.href}
              target="_blank"
              rel="noopener noreferrer"
              class:list={[
                'group inline-flex items-center justify-center gap-2 px-8 py-4 font-semibold text-base rounded-xl transition-all duration-200',
                link.primary
                  ? 'bg-white text-[var(--color-primary)] hover:bg-white/90 hover:scale-105 shadow-lg shadow-black/20'
                  : 'bg-white/10 text-white border border-white/20 hover:bg-white/20 hover:scale-105 backdrop-blur-sm',
              ]}
            >
              {link.label}
              <svg class="w-4 h-4 transition-transform group-hover:translate-x-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
              </svg>
            </a>
          ))
        }
      </div>

      <!-- Trust indicator -->
      <p class="mt-10 text-sm text-white/60">
        Join developers who write docs in their editor
      </p>
    </div>
  </div>

  <!-- Footer integrated into gradient -->
  <footer class="relative z-10 mt-16 pt-8 border-t border-white/10">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 pb-8">
      <div class="flex flex-col sm:flex-row items-center justify-between gap-4">
        <!-- Logo -->
        <a href="/" class="hover:opacity-80 transition-opacity">
          <img
            src="/images/logo.svg"
            alt="PM Toolkit"
            class="h-6 w-auto brightness-0 invert"
          />
        </a>

        <!-- Tagline -->
        <p class="text-sm text-white/50">
          Made for people who live in their editor.
        </p>

        <!-- GitHub Icon -->
        <a
          href="https://github.com/aaronkwhite/pm-toolkit"
          target="_blank"
          rel="noopener noreferrer"
          class="hover:opacity-80 transition-opacity"
          aria-label="GitHub"
        >
          <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
          </svg>
        </a>
      </div>
    </div>
  </footer>
</section>
