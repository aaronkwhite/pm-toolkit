---
import '../styles/global.css';

interface Props {
  title?: string;
  description?: string;
}

const {
  title = 'PM Toolkit - Visual Markdown Editor for Cursor',
  description = 'Obsidian-like editing experience for Cursor. WYSIWYG markdown, kanban boards, and file viewersâ€”built for product managers and teams who work alongside AI.',
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const ogImageURL = new URL('/images/og-image.png', Astro.site);

const jsonLd = {
  '@context': 'https://schema.org',
  '@type': 'SoftwareApplication',
  name: 'PM Toolkit',
  applicationCategory: 'DeveloperApplication',
  operatingSystem: 'Windows, macOS, Linux',
  offers: {
    '@type': 'Offer',
    price: '0',
    priceCurrency: 'USD',
  },
  description: 'Obsidian-like visual editing tools for Cursor/VS Code',
  author: {
    '@type': 'Person',
    name: 'Aaron White',
  },
  url: 'https://pmtoolkit.netlify.app/',
  downloadUrl: [
    'https://marketplace.visualstudio.com/items?itemName=aaronkwhite.pm-toolkit',
    'https://open-vsx.org/extension/aaronkwhite/pm-toolkit',
  ],
  softwareVersion: '0.4.3',
  aggregateRating: {
    '@type': 'AggregateRating',
    ratingValue: '5',
    ratingCount: '1',
  },
};
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <link rel="canonical" href={canonicalURL} />

    <!-- Primary Meta Tags -->
    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />
    <meta
      name="keywords"
      content="markdown editor, wysiwyg markdown, kanban board, visual editor, mermaid diagrams, pdf viewer, notion alternative, slash commands, product manager tools, cursor extension, vscode extension, documentation"
    />
    <meta name="author" content="Aaron White" />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImageURL} />
    <meta property="og:site_name" content="PM Toolkit" />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content={canonicalURL} />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImageURL} />

    <!-- JSON-LD Structured Data -->
    <script is:inline type="application/ld+json" set:html={JSON.stringify(jsonLd)} />

  </head>
  <body class="min-h-screen flex flex-col">
    <slot />
  </body>
</html>
