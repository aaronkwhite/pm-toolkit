{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "npm: watch",
      "type": "npm",
      "script": "watch",
      "isBackground": true,
      "problemMatcher": {
        "base": "$tsc-watch",
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^\\[build\\] Starting\\.\\.\\.$",
          "endsPattern": "^\\[watch\\] Watching for changes\\.\\.\\.$"
        }
      },
      "presentation": {
        "reveal": "never"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "npm: compile",
      "type": "npm",
      "script": "compile",
      "problemMatcher": "$tsc",
      "group": "build"
    },
    {
      "label": "npm: package",
      "type": "npm",
      "script": "package",
      "problemMatcher": "$tsc",
      "group": "build"
    }
  ]
}
