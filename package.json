{
  "name": "pm-toolkit",
  "displayName": "PM Toolkit",
  "description": "Visual markdown editor, kanban boards, and file viewers for Cursor â€” built for product managers and teams who work alongside AI.",
  "version": "0.5.0",
  "publisher": "aaronkwhite",
  "license": "MIT",
  "icon": "images/pm-toolkit-icon-light.png",
  "homepage": "https://getpmtoolkit.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/aaronkwhite/pm-toolkit"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other",
    "Visualization"
  ],
  "keywords": [
    "markdown",
    "kanban",
    "wysiwyg",
    "editor",
    "product-management"
  ],
  "main": "./dist/extension.js",
  "activationEvents": [
    "onCustomEditor:pmtoolkit.kanbanEditor",
    "onCustomEditor:pmtoolkit.markdownEditor",
    "onCustomEditor:pmtoolkit.pdfViewer",
    "onCustomEditor:pmtoolkit.docxViewer",
    "onCustomEditor:pmtoolkit.xlsxViewer",
    "onCustomEditor:pmtoolkit.csvViewer"
  ],
  "contributes": {
    "languages": [
      {
        "id": "kanban",
        "aliases": [
          "Kanban Board"
        ],
        "extensions": [
          ".kanban"
        ],
        "icon": {
          "light": "./icons/kanban-light.svg",
          "dark": "./icons/kanban-dark.svg"
        }
      }
    ],
    "customEditors": [
      {
        "viewType": "pmtoolkit.kanbanEditor",
        "displayName": "Kanban Board",
        "selector": [
          {
            "filenamePattern": "*.kanban"
          }
        ],
        "priority": "default"
      },
      {
        "viewType": "pmtoolkit.markdownEditor",
        "displayName": "PM Toolkit Editor",
        "selector": [
          {
            "filenamePattern": "*.md"
          }
        ],
        "priority": "default"
      },
      {
        "viewType": "pmtoolkit.pdfViewer",
        "displayName": "PDF Viewer",
        "selector": [
          {
            "filenamePattern": "*.pdf"
          }
        ],
        "priority": "default"
      },
      {
        "viewType": "pmtoolkit.docxViewer",
        "displayName": "Word Viewer",
        "selector": [
          {
            "filenamePattern": "*.docx"
          }
        ],
        "priority": "default"
      },
      {
        "viewType": "pmtoolkit.xlsxViewer",
        "displayName": "Excel Viewer",
        "selector": [
          {
            "filenamePattern": "*.xlsx"
          },
          {
            "filenamePattern": "*.xls"
          }
        ],
        "priority": "default"
      },
      {
        "viewType": "pmtoolkit.csvViewer",
        "displayName": "CSV Viewer",
        "selector": [
          {
            "filenamePattern": "*.csv"
          },
          {
            "filenamePattern": "*.tsv"
          }
        ],
        "priority": "default"
      }
    ],
    "commands": [
      {
        "command": "pmtoolkit.newKanbanBoard",
        "title": "New Kanban Board",
        "category": "PM Toolkit"
      },
      {
        "command": "pmtoolkit.openAsKanban",
        "title": "Open as Kanban Board",
        "category": "PM Toolkit"
      },
      {
        "command": "pmtoolkit.openWithPMToolkit",
        "title": "Open with PM Toolkit Editor",
        "category": "PM Toolkit"
      },
      {
        "command": "pmtoolkit.toggleKanbanThumbnails",
        "title": "Toggle Card Thumbnails",
        "category": "PM Toolkit"
      },
      {
        "command": "pmtoolkit.viewSource",
        "title": "View Source",
        "category": "PM Toolkit",
        "icon": "$(list-flat)"
      },
      {
        "command": "pmtoolkit.setTemplateFolder",
        "title": "Set Template Folder",
        "category": "PM Toolkit"
      },
      {
        "command": "pmtoolkit.openSettings",
        "title": "PM Toolkit Settings",
        "category": "PM Toolkit",
        "icon": "$(gear)"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "pmtoolkit.openAsKanban",
          "when": "resourceExtname == .md",
          "group": "navigation"
        }
      ],
      "editor/title": [
        {
          "command": "pmtoolkit.openSettings",
          "when": "activeCustomEditorId =~ /pmtoolkit\\./",
          "group": "2_settings"
        },
        {
          "command": "pmtoolkit.toggleKanbanThumbnails",
          "when": "activeCustomEditorId == pmtoolkit.kanbanEditor",
          "group": "1_modification"
        }
      ],
      "editor/title/run": [
        {
          "command": "pmtoolkit.viewSource",
          "when": "activeCustomEditorId =~ /pmtoolkit\\./",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "PM Toolkit",
      "properties": {
        "pmtoolkit.templateFolder": {
          "type": "string",
          "default": "",
          "description": "Path to folder containing template markdown files"
        },
        "pmtoolkit.templateWatchEnabled": {
          "type": "boolean",
          "default": true,
          "description": "Watch template folder for changes and auto-reload"
        },
        "pmtoolkit.editorFontSize": {
          "type": "number",
          "default": 14,
          "minimum": 10,
          "maximum": 24,
          "description": "Font size in pixels for the markdown editor and kanban board"
        },
        "pmtoolkit.kanbanSaveDelay": {
          "type": "number",
          "default": 150,
          "minimum": 50,
          "maximum": 2000,
          "description": "Delay in milliseconds before saving kanban changes to disk"
        },
        "pmtoolkit.kanbanDefaultColumns": {
          "type": "string",
          "default": "Backlog, In Progress, Done",
          "description": "Comma-separated list of default columns for new kanban boards"
        },
        "pmtoolkit.imageAssetsPath": {
          "type": "string",
          "default": "assets",
          "description": "Directory where uploaded images are saved (relative to the document)"
        },
        "pmtoolkit.kanbanShowThumbnails": {
          "type": "boolean",
          "default": true,
          "description": "Show image thumbnails on kanban cards by default"
        }
      }
    }
  },
  "scripts": {
    "compile": "npm run check-types && node esbuild.js",
    "check-types": "tsc --noEmit",
    "watch": "node esbuild.js --watch",
    "package": "npm run check-types && node esbuild.js --production",
    "vscode:prepublish": "npm run package",
    "test:e2e": "npx playwright test --config=tests/playwright.config.ts",
    "test:e2e:ui": "npx playwright test --config=tests/playwright.config.ts --ui",
    "test:e2e:headed": "npx playwright test --config=tests/playwright.config.ts --headed",
    "test:harness": "npm run compile && npx tsx tests/harness/serve.ts"
  },
  "dependencies": {
    "@dnd-kit/dom": "^0.1.2",
    "@tiptap/core": "^2.11.5",
    "@tiptap/extension-image": "^2.27.2",
    "@tiptap/extension-link": "^2.11.5",
    "@tiptap/extension-placeholder": "^2.11.5",
    "@tiptap/extension-table": "^2.11.5",
    "@tiptap/extension-table-cell": "^2.11.5",
    "@tiptap/extension-table-header": "^2.11.5",
    "@tiptap/extension-table-row": "^2.11.5",
    "@tiptap/extension-task-item": "^2.11.5",
    "@tiptap/extension-task-list": "^2.11.5",
    "@tiptap/pm": "^2.11.5",
    "@tiptap/react": "^2.27.2",
    "@tiptap/starter-kit": "^2.11.5",
    "@tiptap/suggestion": "^2.11.5",
    "gray-matter": "^4.0.3",
    "lucide": "^0.469.0",
    "mammoth": "^1.8.0",
    "mermaid": "^11.4.0",
    "papaparse": "^5.4.1",
    "pdfjs-dist": "^4.9.155",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tiptap-markdown": "^0.8.10",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/express": "^4.17.21",
    "@types/node": "^20.17.14",
    "@types/papaparse": "^5.3.15",
    "@types/react": "^18.3.28",
    "@types/react-dom": "^18.3.7",
    "@types/vscode": "^1.85.0",
    "@vscode/vsce": "^3.2.1",
    "docx": "^9.5.1",
    "esbuild": "^0.24.2",
    "exceljs": "^4.4.0",
    "express": "^4.18.2",
    "pdfkit": "^0.17.2",
    "tsx": "^4.7.0",
    "typescript": "^5.7.3",
    "wait-on": "^7.2.0"
  }
}
